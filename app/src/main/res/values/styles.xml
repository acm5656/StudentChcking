<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Schedule" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_weight">3</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">1px</item>
        <item name="android:background">#ffffff</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ScheduleToptBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_weight">3</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="ScheduleLefttBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#eeeeee</item>
        <item name="android:minHeight">100dp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="bottom_textview">

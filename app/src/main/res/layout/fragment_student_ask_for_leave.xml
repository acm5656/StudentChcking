<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.checkingsystem.student.fragment.StudentAskForLeaveFragment">

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="12"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_weight="2"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="开始时间"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/unclick_text_size"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                >
                <util.PickerView
                    android:id="@+id/fragment_student_ask_for_leave_start_year_pv"
                    android:layout_width="80dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/fragment_student_ask_for_leave_start_year_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年"
                    android:textColor="#ffaa33"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />
                <util.PickerView
                    android:id="@+id/fragment_student_ask_for_leave_start_month_pv"
                    android:layout_width="60dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/fragment_student_ask_for_leave_start_month_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月"
                    android:textColor="#ffaa33"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />
                <util.PickerView
                    android:id="@+id/fragment_student_ask_for_leave_start_day_pv"
                    android:layout_width="60dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/fragment_student_ask_for_leave_start_day_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日"
                    android:textColor="#ffaa33"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_width="match_parent"
            android:layout_height="20dp">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_weight="2"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="结束时间"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/unclick_text_size"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                >
                <util.PickerView
                    android:id="@+id/fragment_student_ask_for_leave_end_year_pv"
                    android:layout_width="80dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/fragment_student_ask_for_leave_end_year_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年"
                    android:textColor="#ffaa33"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />
                <util.PickerView
                    android:id="@+id/fragment_student_ask_for_leave_end_month_pv"
                    android:layout_width="60dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/fragment_student_ask_for_leave_end_month_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月"
                    android:textColor="#ffaa33"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />
                <util.PickerView
                    android:id="@+id/fragment_student_ask_for_leave_end_day_pv"
                    android:layout_width="60dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/fragment_student_ask_for_leave_end_day_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日"
                    android:textColor="#ffaa33"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请假理由"
                android:textColor="#8c8a8a"
                android:textSize="13dp"
                android:layout_marginLeft="10dp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            >
            <EditText
                android:id="@+id/fragement_student_ask_for_leave_reason"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ask_for_leave_edit"
                android:hint="请输入请假理由"
                android:textColorHint="@color/textUnClickColor"
                android:textSize="16dp"
                android:textColor="#000000"
                android:gravity="top"
                android:padding="5dp"
                android:maxLength="150"
                android:textCursorDrawable="@drawable/color_cursor"
                />

        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="提交操作"
            android:textSize="17dp"
            android:background="@drawable/input_login"
            android:id="@+id/fragment_student_ask_for_leave_submit"

            />
    </LinearLayout>

</FrameLayout>

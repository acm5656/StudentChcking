<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:weightSum="44"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@color/actionBarBackgroundColor"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/schedule_study_choose_week"
            android:text="@string/checking"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.7"
        android:orientation="horizontal"
        android:background="#f5f2f2"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/teacher_ask_for_leave_info"
            >
            <ImageView
                android:id="@+id/teacher_ask_for_leave_info_image_view"
                android:layout_marginTop="5dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/query"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/AskForLeaveInfo"
                android:gravity="center"
                style="@style/OnClickText"
                android:id="@+id/teacher_ask_for_leave_info_text_view"
                />
         </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/teacher_checking"
            >
            <ImageView
                android:id="@+id/teacher_checking_image_view"
                android:layout_marginTop="5dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/un_checking"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/unClickText"
                android:gravity="center"
                android:text="@string/checking"
                android:id="@+id/teacher_checking_text_view"
                />
        </LinearLayout>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/teacher_checking_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="37"

        >
    </android.support.v4.view.ViewPager>


</LinearLayout>

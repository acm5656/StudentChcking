<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/actionBarBackgroundColor"
        >
        <ImageView
            android:id="@+id/iv_activity_assistant_agree_for_class_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/back"
            android:layout_alignParentLeft="true"
            android:padding="13dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="允许加入班级"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_toRightOf="@id/iv_activity_assistant_agree_for_class_back"
            android:layout_marginLeft="20dp"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/backgroundColor"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:paddingTop="10dp"
                android:background="#ffffff"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="300dp">
                <ImageView
                    android:id="@+id/iv_activity_assistant_agree_for_class_head"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                    />
            </LinearLayout>

            <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="学号"
                    android:textSize="17dp"/>
                <TextView
                    android:id="@+id/tv_activity_assistant_agree_for_class_no"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginLeft="40dp"
                    android:textSize="17dp"/>
            </LinearLayout>
            <LinearLayout
                android:background="#6c6363"
                android:layout_width="match_parent"
                android:layout_height="1px">

            </LinearLayout>
            <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="姓名"
                    android:textSize="17dp"/>
                <TextView
                    android:id="@+id/tv_activity_assistant_agree_for_class_name"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginLeft="40dp"
                    android:textSize="17dp"/>
            </LinearLayout>
            <LinearLayout
                android:background="#6c6363"
                android:layout_width="match_parent"
                android:layout_height="1px">

            </LinearLayout>
            <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="昵称"
                    android:textSize="17dp"/>
                <TextView
                    android:id="@+id/tv_activity_assistant_agree_for_class_nick_name"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginLeft="40dp"
                    android:textSize="17dp"/>
            </LinearLayout>
            <LinearLayout
                android:background="#6c6363"
                android:layout_width="match_parent"
                android:layout_height="1px">
            </LinearLayout>

            <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="手机号"
                    android:textSize="17dp"/>
                <TextView
                    android:id="@+id/tv_activity_assistant_agree_for_class_tel"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginLeft="40dp"
                    android:textSize="17dp"/>
            </LinearLayout>
            <LinearLayout
                android:background="#6c6363"
                android:layout_width="match_parent"
                android:layout_height="1px">
            </LinearLayout>

            <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="电子邮箱"
                    android:textSize="17dp"/>
                <TextView
                    android:id="@+id/tv_activity_assistant_agree_for_class_email"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginLeft="40dp"
                    android:textSize="17dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn_activity_assistant_agree_for_class_submit"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/input_login"
                    android:text="同意"
                    android:textSize="17dp"
                    android:textColor="#ffffff"
                    />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn_activity_assistant_agree_for_class_refuse"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/exit_button"
                    android:text="拒绝"
                    android:textSize="17dp"
                    android:textColor="#ffffff"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
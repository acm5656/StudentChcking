<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/actionBarBackgroundColor"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="申请入班"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/backgroundColor"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:paddingTop="10dp"
                android:background="#ffffff"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <ImageView
                    android:id="@+id/iv_activity_assistant_agree_for_class_head"
                    android:layout_width="120dp"
                    android:layout_height="120dp"/>
                    />
            </LinearLayout>

            <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="学号"
                    android:textSize="17dp"/>
                <TextView
                    android:id="@+id/tv_activity_assistant_agree_for_class_no"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginLeft="40dp"
                    android:textSize="17dp"/>
            </LinearLayout>
            <LinearLayout
                android:background="#6c6363"
                android:layout_width="match_parent"
                android:layout_height="1px">

            </LinearLayout>
            <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="姓名"
                    android:textSize="17dp"/>
                <TextView
                    android:id="@+id/tv_activity_assistant_agree_for_class_name"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginLeft="40dp"
                    android:textSize="17dp"/>
            </LinearLayout>
            <LinearLayout
                android:background="#6c6363"
                android:layout_width="match_parent"
                android:layout_height="1px">

            </LinearLayout>
            <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="昵称"
                    android:textSize="17dp"/>
                <TextView
                    android:id="@+id/tv_activity_assistant_agree_for_class_nick_name"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginLeft="40dp"
                    android:textSize="17dp"/>
            </LinearLayout>
            <LinearLayout
                android:background="#6c6363"
                android:layout_width="match_parent"
                android:layout_height="1px">
            </LinearLayout>

            <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="手机号"
                    android:textSize="17dp"/>
                <TextView
                    android:id="@+id/tv_activity_assistant_agree_for_class_tel"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginLeft="40dp"
                    android:textSize="17dp"/>
            </LinearLayout>
            <LinearLayout
                android:background="#6c6363"
                android:layout_width="match_parent"
                android:layout_height="1px">
            </LinearLayout>

            <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="电子邮箱"
                    android:textSize="17dp"/>
                <TextView
                    android:id="@+id/tv_activity_assistant_agree_for_class_email"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginLeft="40dp"
                    android:textSize="17dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp">
            </LinearLayout>

            <Button
                android:id="@+id/btn_activity_assistant_agree_for_class_submit"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/input_login"
                android:text="开班"
                android:textSize="17dp"
                android:textColor="#ffffff"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
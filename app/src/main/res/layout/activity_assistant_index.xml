<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="11"
    android:background="#ebebeb"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/actionBarBackgroundColor"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_activity_assistant_index_title"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="导员"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="20dp"
            />
        <ImageView
            android:id="@+id/iv_activity_assistant_index_add"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/add"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_activity_assistant_index"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minHeight="80dp"
        android:orientation="horizontal"
        android:background="#fcfcfc"
        android:layout_marginTop="1sp"
        >
        <LinearLayout
            android:id="@+id/activity_assistant_index_agree_leave"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/iv_activity_assistant_index_agree_leave"
                android:layout_marginTop="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ask_for_leave"
                />

            <TextView
                android:id="@+id/tv_activity_assistant_index_agree_leave"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="批假"
                android:background="@drawable/bottom_button"
                android:layout_centerHorizontal="true"
                android:layout_margin="0dp"
                android:padding="0dp"
                style="@style/OnClickText"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/activity_assistant_index_join_class"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/iv_activity_assistant_index_join_class"
                android:layout_marginTop="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/un_schedule"
                />
            <TextView
                android:id="@+id/tv_activity_assistant_index_join_class"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="入班"
                android:layout_weight="1"
                android:background="@drawable/bottom_button"
                style="@style/unClickText"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/activity_assistant_index_query"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/iv_activity_assistant_index_query"
                android:layout_marginTop="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/un_query"
                />
            <TextView
                android:id="@+id/tv_activity_assistant_index_query"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="查询"
                android:layout_weight="1"
                android:background="@drawable/bottom_button"
                style="@style/unClickText"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/activity_assistant_index_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/iv_activity_assistant_index_mine"
                android:layout_marginTop="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/un_mine"
                />

            <TextView
                android:id="@+id/tv_activity_assistant_index_mine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="我"
                android:background="@drawable/bottom_button"
                android:layout_weight="1"
                style="@style/unClickText"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>


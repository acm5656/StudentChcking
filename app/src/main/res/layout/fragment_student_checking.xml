<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.checkingsystem.student.fragment.StudentAskForLeaveFragment">

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="1sp"
            android:background="@color/itemBackgroundColor"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="课程名称"
                android:textColor="@color/textUnClickColor"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:textSize="@dimen/title_text_size"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="操作系统"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="@dimen/title_text_size"
                android:textColor="#000000"
                android:layout_marginRight="30dp"
                android:id="@+id/fragment_student_checking_name"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:background="@color/itemBackgroundColor"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="上课时间"
                android:textColor="@color/textUnClickColor"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:textSize="@dimen/title_text_size"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="周一第1节"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="@dimen/title_text_size"
                android:textColor="#000000"
                android:layout_marginRight="30dp"
                android:id="@+id/fragment_student_checking_day"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:background="@color/itemBackgroundColor"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="周        数"
                android:textColor="@color/textUnClickColor"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:textSize="@dimen/title_text_size"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="第1周"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="@dimen/title_text_size"
                android:textColor="#000000"
                android:layout_marginRight="30dp"
                android:id="@+id/fragment_student_checking_week"
                />
        </RelativeLayout>

        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
            <Button
                android:id="@+id/fragment_student_checking_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="考勤"
                android:textSize="17dp"
                android:background="@drawable/input_login"
                android:layout_marginRight="10dp"
                />


            <Button
                android:layout_marginLeft="10dp"
                android:id="@+id/fragment_student_help_student_checking_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="他人考勤"
                android:textSize="17dp"
                android:background="@drawable/input_login"
                />


        </LinearLayout>

    </LinearLayout>

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#536bc1"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/schedule_study_choose_week"
            android:text="@string/please_choose"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:background="#999999"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#eeeeee"
            android:orientation="horizontal"
            android:minHeight="40dp"
            android:weightSum="16"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                />

            <TextView
                android:layout_height="match_parent"
                android:text="1"
                style="@style/ScheduleToptBar"
                />

            <TextView

                android:layout_height="match_parent"
                android:text="2"
                style="@style/ScheduleToptBar"
                />
            <TextView

                android:layout_height="match_parent"
                android:text="3"
                style="@style/ScheduleToptBar"
                />
            <TextView

                android:layout_height="match_parent"
                android:text="4"
                style="@style/ScheduleToptBar"
                />

            <TextView

                android:layout_height="match_parent"
                style="@style/ScheduleToptBar"
                android:text="5"
                />


        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="20"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:layout_marginBottom="1px"
                        android:weightSum="16"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="0"
                            style="@style/ScheduleLefttBar"
                            />

                        <TextView
                            android:layout_height="match_parent"
                            style="@style/Schedule"
                            android:text="操作系统\n艾成铭"
                            android:textColor="#000000"
                            android:id="@+id/WeekOneClassOne"
                            />
                        <TextView

                            android:layout_height="match_parent"
                            style="@style/Schedule"
                            android:text="2"
                            android:id="@+id/WeekTwoClassOne"
                            />

                        <TextView

                            android:layout_height="match_parent"
                            style="@style/Schedule"
                            android:text="3"
                            android:id="@+id/WeekThreeClassOne"
                            />

                        <TextView

                            android:layout_height="match_parent"
                            style="@style/Schedule"
                            android:text="4"
                            />
                        <TextView

                            android:layout_height="match_parent"
                            style="@style/Schedule"
                            android:text="5"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:layout_marginBottom="1px"
                        android:weightSum="16"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="0"
                            style="@style/ScheduleLefttBar"
                            />

                        <TextView
                            android:layout_height="match_parent"
                            style="@style/Schedule"
                            android:text="操作系统\n艾成铭"
                            android:id="@+id/WeekOneClassTwo"
                            />
                        <TextView

                            android:layout_height="match_parent"
                            style="@style/Schedule"
                            android:text="2"
                            android:id="@+id/WeekTwoClassTwo"
                            />

                        <TextView

                            android:layout_height="match_parent"
                            style="@style/Schedule"
                            android:text="3"
                            android:id="@+id/WeekThreeClassTwo"
                            />

                        <TextView

                            android:layout_height="match_parent"
                            style="@style/Schedule"
                            android:text="4"
                            android:id="@+id/WeekFourClassTwo"
                            />
                        <TextView

                            android:layout_height="match_parent"
                            style="@style/Schedule"
                            android:text="5"
                            android:id="@+id/WeekFiveClassTwo"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:layout_marginBottom="1px"
                        android:weightSum="16"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="0"
                            style="@style/ScheduleLefttBar"
                            />

                        <TextView
                            android:layout_height="match_parent"
                            style="@style/Schedule"
                            android:text="操作系统\n艾成铭"
                            android:id="@+id/WeekOneClassThree"
                            />
                        <TextView

                            android:layout_height="match_parent"
                            style="@style/Schedule"
                            android:text="2"
                            android:id="@+id/WeekTwoClassThree"
                            />

                        <TextView

                            android:layout_height="match_parent"
                            style="@style/Schedule"
                            android:text="3"
                            android:id="@+id/WeekThreeClassThree"
                            />

                        <TextView

                            android:layout_height="match_parent"
                            style="@style/Schedule"
                            android:text="4"
                            android:id="@+id/WeekFourClassThree"
                            />
                        <TextView

                            android:layout_height="match_parent"
                            style="@style/Schedule"
                            android:text="5"
                            android:id="@+id/WeekFiveClassThree"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:layout_marginBottom="1px"
                        android:weightSum="16"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="0"
                            style="@style/ScheduleLefttBar"
                            />

                        <TextView
                            android:layout_height="match_parent"
                            style="@style/Schedule"
                            android:text="操作系统\n艾成铭"
                            android:id="@+id/WeekOneClassFour"
                            />
                        <TextView

                            android:layout_height="match_parent"
                            style="@style/Schedule"
                            android:text="2"
                            android:id="@+id/WeekTwoClassFour"
                            />

                        <TextView

                            android:layout_height="match_parent"
                            style="@style/Schedule"
                            android:text="3"
                            android:id="@+id/WeekThreeClassFour"
                            />

                        <TextView

                            android:layout_height="match_parent"
                            style="@style/Schedule"
                            android:text="4"
                            android:id="@+id/WeekFourClassFour"
                            />
                        <TextView

                            android:layout_height="match_parent"
                            style="@style/Schedule"
                            android:text="5"
                            android:id="@+id/WeekFiveClassFour"
                            />


                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minHeight="80dp"
        android:orientation="horizontal"
        android:background="#536bc1"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="学习"
            android:layout_weight="1"
            android:background="@drawable/bottom_button"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#fffffe"
            android:layout_centerHorizontal="true"
            android:id="@+id/schedule_study"
            android:layout_margin="0dp"
            android:padding="0dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="查询"
            android:textColor="#c5cdea"
            android:layout_weight="1"
            android:id="@+id/schedule_query"
            android:background="@drawable/bottom_button"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="我"
            android:textColor="#c5cdea"
            android:background="@drawable/bottom_button"
            android:layout_weight="1"
            android:id="@+id/schedule_mine"
            />

    </LinearLayout>

</LinearLayout>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.checkingsystem.student.fragment.StudentAskForLeaveFragment">

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="1sp"
            android:background="@color/itemBackgroundColor"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="课程名称"
                android:textColor="@color/textUnClickColor"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:textSize="@dimen/title_text_size"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="操作系统"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="@dimen/title_text_size"
                android:textColor="#000000"
                android:layout_marginRight="30dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:background="@color/itemBackgroundColor"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="上课时间"
                android:textColor="@color/textUnClickColor"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:textSize="@dimen/title_text_size"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="周一第1节"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="@dimen/title_text_size"
                android:textColor="#000000"
                android:layout_marginRight="30dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:background="@color/itemBackgroundColor"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="周        数"
                android:textColor="@color/textUnClickColor"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:textSize="@dimen/title_text_size"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="第1周"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="@dimen/title_text_size"
                android:textColor="#000000"
                android:layout_marginRight="30dp"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            >

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_weight="2"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="请选择考勤时间"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/unclick_text_size"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                >

                <util.PickerView
                    android:id="@+id/minute_pv"
                    android:layout_width="80dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/minute_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分"
                    android:textColor="#ffaa33"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="40dp"
            android:text="考勤"
            android:textSize="17dp"
            android:background="#57add2"
            android:id="@+id/fragment_teacher_checking_start_checking"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="40dp"
            android:text="课堂反馈"
            android:textSize="17dp"
            android:background="#6ab64e"
            />
    </LinearLayout>

</FrameLayout>
